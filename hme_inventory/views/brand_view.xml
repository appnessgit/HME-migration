<?xml version="1.0" encoding="utf-8"?>
    <odoo>
      <data>
      <record id="view_picking_form_extend" model="ir.ui.view">
        <field name="name">stock: add brand field</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
        <xpath expr="//sheet/notebook/page/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after"
         options="{'no_open':True,'no_create':1,'no_create_edit':1}"   required="True" >
          <field name="pack_operation_product_ids" attrs="{'readonly': [ ('state','in',('done','cancel'))]}"/>
        </xpath>
      </field>
      </record>
    </data>
    </odoo>
