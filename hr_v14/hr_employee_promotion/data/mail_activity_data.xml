        <!-- Employee Promotion activities -->
        <record id="mail_act_promotion_approval" model="mail.activity.type">
            <field name="name">Approval</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_employee_promotion.model_employee_rotation"/>
        </record>

        <record id="mail_act_promotion_approved" model="mail.activity.type">
            <field name="name">Approved</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_employee_promotion.model_employee_rotation"/>
        </record>

        <record id="mail_act_promotion_reject" model="mail.activity.type">
            <field name="name">Rejected</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_employee_promotion.model_employee_rotation"/>
        </record>
    </data>
