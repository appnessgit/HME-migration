<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_form_inherit">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="inside">
                    <group string="Sick Leaves">
                        <field name="sick_days"/>
                        <field name="first_period"/>
                        <field name="second_period"/>
                        <field name="third_period"/>
                        <field name="forth_period"/>
                        <field name="fifth_period"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>