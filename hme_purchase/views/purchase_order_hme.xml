<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hme_purchase_view_extend" model="ir.ui.view">
        <field name="name">Purchase: add fields</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="purchase_type" />
            </xpath>

            <!-- <xpath expr="//field[@name='date_order']" position="after">
                <field name="terms_of_delivery" />
            </xpath> -->

            <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="brand_id" />
            </xpath>

            <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="replace">
                <field name="product_id" />
            </xpath>

        </field>
    </record>
</odoo>
