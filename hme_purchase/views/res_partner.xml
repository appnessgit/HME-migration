<odoo>
    <data>
        <!--        adding brand field-->
        <record id="hme_partner_view_form" model="ir.ui.view">
            <field name="name">Hme Partners</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_brand"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button icon="fa-list" class="oe_stat_button">
                        <field name="product_count" string="Products" widget="statinfo" domain="[('is_brand','=',True)]"/>
                    </button>
                </xpath>
            </field>
        </record>

        <!--        brand menu-->
        <record model="ir.actions.act_window" id="menu_product_brand_action">
            <field name="name">Brands</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_brand','=',True)]</field>
            <field name="context">{'is_brand': 1, 'default_customer':0, 'default_supplier':0}</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>
        <menuitem name="Brands" id="product_brands_menu" parent="purchase.menu_procurement_management" action="menu_product_brand_action" sequence="10"/>

    </data>
</odoo>