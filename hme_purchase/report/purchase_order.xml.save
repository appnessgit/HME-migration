                    <strong>Request Date of Delivery</strong>
                    <p><span t-field="o.date_planned" t-options='{"format": "MM/dd/yyyy"}' widget="integer"/></p>
                </div>
                <div t-if="o.terms_of_payment" class="col-xs-3">
                    <strong>Terms of Payment</strong>
                    <p t-field="o.terms_of_payment"/>
                </div>
                <div t-if="o.way_of_transport" class="col-xs-3">
                    <strong>Way of Transport</strong>
                    <p t-field="o.date_order"/>
                </div>
            </div>
		</t>
		 <p>Requested Date of Delivery  <span t-field="o.date_planned" 
t-options='{"format": "MM/dd/yyyy"}' widget="integer"/></p>
            <!--<td class="text-center">--
                <!--<p field ="date_planned"/>-->
            <!--</td>-->

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Description</strong></th>
                        <!--<th class="text-center"><strong>Expected Date</strong></th>-->
                        <th class="text-right"><strong>Qty</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="order_line">
                        <td>
                            <span t-field="order_line.name"/>
                        </td>
                        <!--<td class="text-center">-->
                            <!--<span t-field="order_line.date_planned"/>-->
                        <!--</td>-->
                        <td class="text-right">
                            <span t-field="order_line.product_qty"/>
                            <span t-field="order_line.product_uom" groups="product.group_uom"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <p t-field="o.notes"/>

            <div class="oe_structure"/>
        </div>
    </t>
</t>
    </xpath>
</template>

</odoo>
