<odoo>
    <data noupdate="0" >
    <!--  Loan activities -->
        <!-- Request -->
        <record id="mail_loan_request" model="mail.activity.type">
            <field name="name">Request</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_loan_base.model_hr_loan"/>
        </record>
        <!-- Reject -->
        <record id="mail_loan_reject" model="mail.activity.type">
            <field name="name">Reject</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_loan_base.model_hr_loan"/>
        </record>
        <!-- Recalculation -->
        <record id="mail_loan_recalculation" model="mail.activity.type">
            <field name="name">Recalculated</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_loan_base.model_hr_loan"/>
        </record>
        <!-- Clearance -->
        <record id="mail_loan_clear" model="mail.activity.type">
            <field name="name">Cleared</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_loan_base.model_hr_loan"/>
        </record>
        <!-- Approved -->
        <record id="mail_loan_approve" model="mail.activity.type">
            <field name="name">Aprroved</field>
            <field name="icon">fa-check</field>
            <field name="res_model_id" ref="hr_loan_base.model_hr_loan"/>
        </record>
    </data>
</odoo>